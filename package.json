{
  "name": "will-counter",
  "version": "1.0.0",
  "description": "Habit tracking application with agent-driven development workflow",
  "main": "index.js",
  "scripts": {
    "agent:workflow": "node scripts/claude-agent-workflow.js",
    "agent:pm": "node scripts/claude-agent-workflow.js",
    "workflow:start": "bash scripts/agent-workflow.sh",
    "dev:setup": "bash scripts/dev-setup.sh",
    "dev:backend": "cd api && ./gradlew run",
    "dev:frontend": "cd frontend && npm start",
    "test:all": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd api && ./gradlew test",
    "test:frontend": "cd frontend && npm test",
    "clean": "bash .claude/cleanup.sh",
    "security:audit": "npm audit && cd api && ./gradlew dependencyCheckAnalyze"
  },
  "keywords": ["habit-tracking", "mobile-app", "kotlin", "react-native", "agent-workflow"],
  "author": "Will Counter Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/will-counter.git"
  }
}